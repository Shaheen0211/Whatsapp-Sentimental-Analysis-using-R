require("syuzhet")
require("ggplot2")
texts<-readLines("test1.txt")
texts
sentiment<-get_nrc_sentiment(texts)
sentiment
totalsentiment<-data.frame(colSums(sentiment[,c(1:10)]))
totalsentiment
names(totalsentiment)<-"count"
totalsentiment
totalsentiment<-cbind("sentiment"=rownames(totalsentiment),totalsentiment)
totalsentiment
barplot(totalsentiment$count,names.arg=totalsentiment$sentiment,xlab="emotions",ylab="count",col=rainbow(10),main="sentimental analysis for our group")
